{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "target": "es2024",
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "outDir": "dist",
    "paths": { "@/*": ["./src/*"] }
  },
  "include": ["src/**/*", "eslint.config.js", "prettier.config.js"]
}
